{{!-- Rendering Registration in Welcomepage --}}

{{#if registrationToken}}
<div class="container mt-3">
    <h3 class="text-center">Wooh!! Registeration Successfull</h3>
    <div class="alert alert-info">
        <strong>Welcome <i>{{registrationToken}}</i></strong> You should <a href="/user/login" class="alert-link">Login</a>.
    </div>
</div>
{{/if}}

{{!-- -------------------------------------------------------------------------}}

{{!-- Rendering login in Welcomepage --}}

{{#if email}}
{{#if username}}
<div class="container">
    <h2 class="m-4 text-center">Welcome {{username}}</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-info">
                <td>{{username}}</td>
                <td>{{email}}</td>
            </tr>
        </tbody>
    </table>
</div>
{{/if}}
{{/if}}

